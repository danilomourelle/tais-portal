{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "ES2016.Array.Include"
        ],
        "allowJs": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@configs/*": [
                "./src/configs/*"
            ],
            "@controllers/*": [
                "./src/controllers/*"
            ],
            "@errors/*": [
                "./src/errors/*"
            ],
            "@models/*": [
                "./src/models/*"
            ]
        }
    },
    "exclude": [
        "jest.config.ts"
    ]
}